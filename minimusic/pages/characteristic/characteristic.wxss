.container{
  margin: 0;
  padding: 0;
  background-color: #8a1616;
}
.header{
  width: 100%;
  height: 60rpx;
  background-color: #8a1616;
  text-align: center;
  line-height: 2em;
  color: #fff;
}
.title{
  width: 100%;
}
.title image{
  width: 100%;
}
.con{
  padding: 30rpx 20rpx;
  height: 600rpx;
}
.con text{
  display: block;
}
.con .b_title{
  color: rgb(61, 18, 18);
  font-weight: bold;
  border-bottom: 1rpx #fff solid;
  padding-bottom  : 20rpx;
}
.con .l_title{
  font-size: 25rpx;
  font-weight: bold;
  padding-top: 10rpx;
}
.con .neirong{
  font-size: 24rpx;
  line-height: 2em;
  text-indent: 2em;
}