.container{
  margin: 0;
  padding: 0;
}
.header{
  width: 100%;
  height: 60rpx;
   background-color: #8a1616; 
  /* background-color: gainsboro; */
  text-align: center;
  line-height: 2em;
  color: #fff;
}
.login{
  width: 100%;
  height: 1200rpx;
  background-color: #8a1616;
  padding: 75rpx 30rpx;
}
.login view{
  width: 80%;
  height: 100rpx;
  border: 1rpx rgb(88, 127, 177) solid;
  border-radius: 10rpx;
  margin-left: 75rpx;
  line-height: 100rpx;
}
.login label{
  display: block;
  float: left;
  margin-left: 40rpx;
}
.login input{
  width: 400rpx;
  margin-top: 30rpx;
  background-color: #fff;
  border: 2rpx rgb(134, 130, 130) solid; 
  border-radius: 10rpx;
}
.login_btn{
  margin-top: 45rpx;  
}
